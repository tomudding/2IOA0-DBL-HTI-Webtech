upstream flask {
    server 127.0.0.1:5000 fail_timeout=0;
}

upstream bokeh_matrix {
    server 127.0.0.1:9000 fail_timeout=0;
}

upstream bokeh_nodelink {
    server 127.0.0.1:9500 fail_timeout=0;
}

server {
    listen 80;
    server_name graphion.uddi.ng;

    return 301 https://$server_name/;
}

server {
    listen 443;
    server_name graphion.uddi.ng;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/graphion.uddi.ng/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/graphion.uddi.ng/privkey.pem;

    client_max_body_size 50M;

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/webserver/2IOA0/graphion/2IOA0.sock;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:$server_port;
        proxy_buffering off;
    }

    location "/api/matrix/^([a-z0-9]){32}$" {
        include proxy_params;
        proxy_pass http://bokeh_matrix;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:$server_port;
        proxy_buffering off;
    }

    location "/api/nodelink/^([a-z0-9]){32}$" {
        include proxy_params;
        proxy_pass http://bokeh_nodelink;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:$server_port;
        proxy_buffering off;
    }
}