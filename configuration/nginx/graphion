server {
    listen 80;
    server_name graphion.uddi.ng;

    return 301 https://$server_name/;
}

server {
    listen 443;
    server_name graphion.uddi.ng;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/graphion.uddi.ng/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/graphion.uddi.ng/privkey.pem;

    client_max_body_size 50M;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:$server_port;
        proxy_buffering off;
    }

    location /static {
        alias /home/webserver/2IOA0/graphion/static;
    }
}